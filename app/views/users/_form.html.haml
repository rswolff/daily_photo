= form_for(@user, html: {class: 'form-horizontal'}) do |f|
  - if @user.errors.any?
    #errorExplanation.alert-message.block-message.error
      %h2= "#{pluralize(@user.errors.count, 'error')} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
 
  %fieldset
    %legend The Legend  
    .control-group
    = f.label :first_name
    .controls
      = f.text_field :first_name
      %p.help-block Add help text here
    .control-group
    = f.label :last_name
    .controls
      = f.text_field :last_name
      %p.help-block Add help text here
    .control-group
    = f.label :email
    .controls
      = f.text_field :email
      %p.help-block Add help text here
    .control-group
    = f.label :crypted_password
    .controls
      = f.text_field :crypted_password
      %p.help-block Add help text here
    .control-group
    = f.label :salt
    .controls
      = f.text_field :salt
      %p.help-block Add help text here
    .actions
    = f.submit 'Submit', class: 'btn primary'
